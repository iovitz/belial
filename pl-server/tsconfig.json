{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "exclude": [
    "*.js",
    "*.ts",
    "dist",
    "node_modules",
    "test",
    "./.pilirc.json"
  ]
}